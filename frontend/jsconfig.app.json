{
  "compilerOptions" : {
    "allowJs": true,
    "checkJs": false,
    "module": "esnext",
    "target": "esnext",
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@assets/*": ["assets/*"],
      "@utils/*": ["utils/*"]
    },
    "jsx": "react-jsx",
    "outDir": "dist",
    "noEmit": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
  